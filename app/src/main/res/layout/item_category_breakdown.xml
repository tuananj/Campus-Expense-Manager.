<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <!-- Category Name and Amount -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <View
            android:id="@+id/viewColorIndicator"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:background="#2196F3"/>

        <TextView
            android:id="@+id/tvCategoryName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ăn uống"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/tvCategoryAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,500,000 VNĐ"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#F44336"/>
    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressCategory"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="50"
        android:progressTint="#2196F3"
        android:layout_marginBottom="4dp"/>

    <!-- Percentage -->
    <TextView
        android:id="@+id/tvCategoryPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50% của tổng chi tiêu"
        android:textSize="12sp"
        android:textColor="#666666"/>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="12dp"/>

</LinearLayout>